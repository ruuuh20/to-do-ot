<h1>Sign up</h1>
<%= form_for @client do |f| %>

<%= f.fields_for :user_attributes, @client.user || User.new do |ff| %>
  <div class="field">
    <%= ff.label :name  %>
    <%= ff.text_field :name  %>
  </div>
  <div class="field">
    <%= ff.label :password  %>
    <%= ff.text_field :password  %>
  </div>
<% end %>

<%= f.submit "Sign Up" %>

<% end %>
