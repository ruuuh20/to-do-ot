<!DOCTYPE html>
<html>
  <head>
    <title>ToDoOt</title>
    <%= csrf_meta_tags %>
    

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% unless controller_name == "static_pages" %>

    <nav class="nav">
      <ul>
        <li><%= link_to "Home", root_path, :class => "nav-item" %><li>
          <% if current_user %>
            <li><%= link_to "Log Out", logout_path, :class => "nav-item" %></li>
            <li class="nav-item">Hi, <%= current_user.name %></li>
          <% else %>
              <li><%= link_to "Log In", login_path, :class => "nav-item" %></li>
              <li><%= link_to "Sign Up", new_user_path, :class => "nav-item" %></li>
          <% end %>
      </ul>
    </nav>

    <% end %>
    <%= yield %>
  </body>
</html>
