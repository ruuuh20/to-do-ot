<%= form_for @appointment do |f| %>
  <div class="field">
    <%= f.label "Date" %>
    <%= f.datetime_field :date %>
  </div>

  <div class="field">
    <%= f.label "Status" %>
    <%= f.text_area :status %>
  </div>

  <div class="field">
    <%= f.label "Client Name" %>
    <%= f.collection_select :client_id, User.where(:meta_type => "Client"), :meta_id, :name %>
  </div>

  <div class="field">
    <%= f.label "Therapist Name" %>
    <%= f.collection_select :therapist_id, User.where(:meta_type => "Therapist"), :meta_id, :name %>
  </div>




  <%= f.submit "Add" %>
<% end  %>
