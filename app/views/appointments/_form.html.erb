<%= form_for @appointment do |f| %>
  <div class="field">
    <%= f.label "Date" %>
    <%= f.datetime_select :date %>
  </div>

  <div class="field">
    <%= f.label "Status" %>
    <%= f.text_area :status %>
  </div>

  <div class="field">
    <%= f.label "Client Name" %>
    <%= f.collection_select :client, User.where(:meta_type => "Client"), :id, :name %>
  </div>




  <%= f.submit "Add" %>
<% end  %>
